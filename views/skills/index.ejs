<!DOCTYPE html>
<html>
  <head>
    <title>Developer Skills</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Developer Skills</h1>
    <ul> 
      <% skills.forEach((skill,idx) => {%>
        <li>
          <form method="POST" action="/skills/<%= idx %>?_method=DELETE"
            class="delete-form" >
            <button type="submit">X</button>
          </form>
          <a href="/skills/<%= idx %>"><%= skill.language %></a>
        </li>
        <% }); %>
      </ul>
      <a href="/skills/new">Add skill</a>
    </body>
</html>